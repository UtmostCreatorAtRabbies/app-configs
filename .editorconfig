root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,jsx,tsx,vue,css,scss,json,yaml,yml,md}]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.blade.php]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[docker-compose.yml]
indent_size = 4
