{
  // =========================================================
  // GLOBAL: stable formatting strategy
  // =========================================================
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSaveTimeout": 7500,

  // Prettier is the global formatter for "web" languages.
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Avoid accidental double-format by built-in formatters.
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "json.format.enable": false,

  // Team-safe: only format when repo config exists.
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,

  // =========================================================
  // FILES: reduce diff noise (safe defaults)
  // =========================================================
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",

  // =========================================================
  // Language associations (Laravel / Statamic)
  // =========================================================
  "files.associations": {
    "*.blade.php": "blade",
    "*.antlers.html": "html",
    "*.antlers.php": "php",
    "*.env": "dotenv",
    ".env*": "dotenv",
    "*.stub": "php",
  },

  "emmet.includeLanguages": {
    "blade": "html",
    "vue": "html",
  },

  // =========================================================
  // PHP: Pint ONLY (DevSense = analysis only)
  // =========================================================
  "[php]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "open-southeners.laravel-pint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {},
  },

  // Prevent duplicate diagnostics (VS Code PHP validator vs DevSense).
  "php.validate.enable": false,

  // Ensure Pint uses the project-local binary (not global).
  "laravel-pint.enable": true,
  "laravel-pint.executablePath": "./vendor/bin/pint",

  // (Optional) If you use Laravel Extra IntelliSense and want the right PHP runtime:
  // "laravelExtraIntellisense.phpCommand": "${env:HOME}/.config/herd/bin/php",

  // =========================================================
  // Blade: Blade Formatter ONLY
  // =========================================================
  "[blade]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "shufo.vscode-blade-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {},
  },

  "bladeFormatter.format.enabled": true,
  "bladeFormatter.format.indentSize": 4,
  "bladeFormatter.format.wrapLineLength": 9999,
  "bladeFormatter.format.wrapAttributes": "preserve",
  "bladeFormatter.format.endWithNewline": true,
  "bladeFormatter.format.phpVersion": "8.3",
  "bladeFormatter.format.sortTailwindcssClasses": false,

  // =========================================================
  // JS / TS / Vue: Prettier formats, ESLint fixes
  // =========================================================
  "eslint.enable": true,
  "eslint.format.enable": false,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
  ],

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
    },
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
    },
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
    },
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
    },
  },
  "[vue]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
    },
  },

  // =========================================================
  // CSS / SCSS: Prettier formats, Stylelint fixes
  // =========================================================
  "stylelint.validate": ["css", "scss", "vue"],

  "[css]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit",
    },
  },
  "[scss]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit",
    },
  },

  // =========================================================
  // JSON / YAML / Markdown / HTML: Prettier only
  // =========================================================
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  // =========================================================
  // Tailwind (Blade/Vue)
  // =========================================================
  "tailwindCSS.includeLanguages": {
    "blade": "html",
    "vue": "html"
  },
  "cSpell.userWords": [
    "laravel",
    "Rabbies",
    "Statamic"
  ],
}
